<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    tools:context=".SignUpActivity">

    <!-- Top Green Text Banner -->
    <TextView
        android:id="@+id/topBannerText"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="Join AttendEase today \nand start exploring!"
        android:textColor="#5E2AAF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Centered White Card with Content -->
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="525dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-6dp"
        android:background="@drawable/rounded_blue_bg"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/fullNameEditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />

        <!-- SignUp Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="118dp"
            android:backgroundTint="#96FF86"
            android:padding="2dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:onClick="signUp" />

        <!-- Illustration Image -->
        <ImageView
            android:layout_width="380dp"
            android:layout_height="230dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1" />

        <!-- Row: Already a user? + Login Button -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="715dp"
            android:text="Already a user?"
            android:textColor="#4F1F9B"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="710dp"
            android:backgroundTint="#96FF86"
            android:text="LogIn"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="goToLogin" />
    </LinearLayout>
</RelativeLayout>
