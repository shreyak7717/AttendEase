<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5D4FF"
    tools:context=".MainActivity">


    <!-- Top Green Text Banner -->
    <TextView
        android:id="@+id/topBannerText"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:padding="4dp"
        android:text="Join AttendEase today \nand start exploring!"
        android:textSize="14sp"
        android:textColor="#5E2AAF"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_button"
        android:elevation="6dp" />


    <!-- Centered White Card with Content -->
    <!--
       <ImageView
           android:layout_width="210dp"
           android:layout_height="400dp"
           android:layout_marginStart="90dp"
           android:layout_marginTop="153dp"
           android:rotation="-10"
           android:scaleType="centerCrop"
           android:src="@drawable/rectangle1" /> -->


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="410dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_blue_bg"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">


        <!-- Logo -->


        <!-- Full Name Input -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="Welcome Image"
            android:src="@drawable/logo" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />


        <!-- Email Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />


        <!-- Password Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />


        <!-- Confirm Password Input -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="12sp" />


        <!-- SignUp Button aligned to left -->


        <!-- Illustration Image -->
        <Button


            android:id="@+id/btnSignUp"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="55dp"
            android:backgroundTint="#96FF86"
            android:padding="2dp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_1" />


        <!-- Row: Already a user? + Login Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


        </LinearLayout>


    </LinearLayout>


    <!-- Already a user? and Login Button Outside -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="560dp"
        android:text="Already a user?"
        android:textColor="#4F1F9B"
        android:textSize="12sp" />
    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="50dp"
        android:layout_height="33dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="#96FF86"
        android:text="LogIn"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:onClick="goToLogin"
        tools:ignore="OnClick" />




</RelativeLayout>
