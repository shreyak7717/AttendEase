        <!-- Row: Already a user? + Login Button -->

        <Button


            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
